:javascript
  $(function() {
    $("#login_register").dialog({
      autoOpen: false,
      height: 300,
      width: 350,
      modal: true,
      buttons: {
        "Get started now": function() {
          // Proceed
          $( this ).dialog( "close" );
        },
        "Cancel": function() {
          $( this ).dialog( "close" );
        }
      },
      close: function() {
        
      }
    });
    $('.sign_in_button').click(function() {
      $('#login_register').dialog('open');
    });  //{
  });


